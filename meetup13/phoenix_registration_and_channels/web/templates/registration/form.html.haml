= form_for @changeset, @action, fn f ->

  = if @changeset.action do
    .alert.alert-danger
      %p Oops, something went wrong! Please check the errors below:
      %ul

        = for {attr, message} <- f.errors do
          %li
            = humanize(attr)
            = message
        - end
  - end

  .form-group
    = label f, :firstname, "Firstname", class: "control-label"
    = text_input f, :firstname, class: "form-control"

  .form-group
    = label f, :lastname, "Lastname", class: "control-label"
    = text_input f, :lastname, class: "form-control"

  .form-group
    = label f, :email, "Email", class: "control-label"
    = text_input f, :email, class: "form-control"

  .form-group
    = label f, :crypted_password, "Password", class: "control-label"
    = password_input f, :crypted_password, class: "form-control"

  .form-group
    = label f, :crypted_password_confirmation, "Confirm Password", class: "control-label"
    = password_input f, :crypted_password_confirmation, class: "form-control"

  .form-group
    = submit "Submit", class: "btn btn-primary"

- end
